{% extends "base.html.twig" %}
{% block body %}
    <center><h3>Create course</h3><center>
    {{ form_start(form)}}
        <label style="margin-top: 20px;">TITLE</label>
        {{ form_row(form.title) }}
        <label style="margin-top: 20px;">DESCRIPTION</label>
        {{ form_row(form.description) }}
        <label style="margin-top: 20px;">SLUG</label>
        {{ form_row(form.slug) }}
        <label style="margin-top: 20px;">IMAGE</label>
        {{ form_row(form.image) }}

    <div class="mb-3">
        <button class="btn btn-success" type="submit" style="margin-top: 20px;">Create</button>
    </div>
{% endblock %}